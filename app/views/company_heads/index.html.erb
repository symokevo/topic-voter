<h1>Company Members</h1>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Approval Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.approved? ? "Approved" : "Pending" %></td>
        <td>
          <% unless user.approved? %>
            <%= form_with url: approve_company_company_head_path(@company, user), method: :patch, local: true do %>
              <%= submit_tag 'Approve', class: 'btn btn-success btn-sm' %>
            <% end %>
          <% end %>
          <%= form_with url: company_company_head_path(@company, user), method: :delete, local: true do %>
            <%= submit_tag 'Delete', class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
