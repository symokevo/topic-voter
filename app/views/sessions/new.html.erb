<%= form_with url: login_path, local: true, class: "needs-validation", novalidate: true do |f| %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2 class="mb-4">Login</h2>

        <div class="mb-3">
          <%= f.label 'session[email]', 'Email', class: "form-label" %>
          <%= f.email_field 'session[email]', class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a valid email.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label 'session[password]', 'Password', class: "form-label" %>
          <%= f.password_field 'session[password]', class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a password.
          </div>
        </div>

        <%= f.submit "Login", class: "btn btn-primary" %>

        <div class="mt-3">
          <p>Click below to create a new account.</p>
          <%= link_to "Sign up", new_company_heads_registration_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  (function () {
    'use strict';

    window.addEventListener('load', function () {
      var forms = document.getElementsByClassName('needs-validation');

      Array.prototype.filter.call(forms, function (form) {
        form.addEventListener('submit', function (event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  }());
</script>
