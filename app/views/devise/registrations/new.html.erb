<%= form_with model: @user, url: registration_path(resource_name), local: true, class: "needs-validation", novalidate: true do |f| %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2 class="mb-4">Register Member</h2>

        <div class="mb-3">
          <%= f.label :company_id, class: "form-label" %>
          <%= f.text_field :company_id, class: "form-control", placeholder: "Company Id:", required: true %>
          <div class="invalid-feedback">
            Please provide a valid company ID.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :full_name, class: "form-label" %>
          <%= f.text_field :full_name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide your full name.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a valid email.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a password.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please confirm your password.
          </div>
        </div>

        <%= f.submit "Register", class: "btn btn-primary" %>

        <div class="mt-3">
          <p>Already have an account? <%= link_to 'Log in', new_user_session_path, class: "btn btn-link" %></p>
          <p>Are you a company head? <%= link_to 'Register here', new_company_heads_registration_path, class: "btn btn-link" %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>


<script>
  // JavaScript for disabling form submissions if there are invalid fields
  (function () {
    'use strict'

    window.addEventListener('load', function () {
      var forms = document.getElementsByClassName('needs-validation')

      Array.prototype.filter.call(forms, function (form) {
        form.addEventListener('submit', function (event) {
          if (form.checkValidity() === false) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    }, false)
  }())
</script>
