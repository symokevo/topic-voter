<!-- app/views/blog_posts/show.html.erb -->
<p>
  <strong>Title:</strong>
  <%= @blog_post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog_post.content %>
</p>

<p>
  <strong>Category:</strong>
  <%= @blog_post.category %>
</p>

<p>
  <strong>Created by:</strong>
  <%= @blog_post.user.full_name %> (<%= @blog_post.user.role %>) at <%= @blog_post.user.company.name %>
</p>

<% if @blog_post.photo.attached? %>
  <p>
    <%= image_tag @blog_post.photo %>
  </p>
<% end %>

<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Delete', blog_post_path(@blog_post), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', blog_posts_path %>
