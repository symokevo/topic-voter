<div class="container mt-5">
  <h1 class="mb-4">Members</h1>
  <div class="list-group">
    <% @users.each do |user| %>
      <a href="<%= user_path(user) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <span><%= user.full_name %></span>
        <span class="badge bg-primary rounded-pill">Profile</span>
      </a>
    <% end %>
  </div>
</div>
